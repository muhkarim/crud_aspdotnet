@model IEnumerable<CRUD_ASPDOTNET_MVC_ENTITY_FRAMEWORK.Models.Item>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layouts/Layout.cshtml";
}


<a href="@Url.Action("Create")" class="btn btn-primary m-b-10 mt-2">
    <i class="mdi mdi-plus-circle"></i>
    <strong> Create New Item </strong>
</a>

<table id="itemTable" class="display nowrap table table-hover table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>
            <th>@Html.DisplayNameFor(model => model.Supplier)</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stock)
                </td>
                <td>@Html.DisplayFor(modelItem => item.Supplier.Name)</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-warning" data-toggle="tooltip" data-placement="top" title="Edit">
                        <i class="mdi mdi-pencil"></i>

                    </a> |

                    <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-info" data-toggle="tooltip" data-placement="top" title="Details">
                        <i class="mdi mdi-eye"></i>

                    </a> |

                    <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger" data-toggle="tooltip" data-placement="top" title="Delete">
                        <i class="mdi mdi-delete"></i>

                    </a>
                </td>
            </tr>
        }
    </tbody>

</table>

@section Scripts{
    <script>
        $(document).ready( function () {
        $('#itemTable').DataTable({
                "columns": [
                    { "Name": "first", "orderable": true },
                    { "Price": "second", "orderable": true },
                    { "Stock": "third", "orderable": true },
                    { "Supplier": "fourth", "orderable": true },
                    { "Action": "fifth", "orderable": false }
                ]
            });
        } );
    </script>

    }




    
